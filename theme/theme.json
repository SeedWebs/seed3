{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "var(--color-primary, #004999)",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "var(--color-secondary, #0099ff)",
